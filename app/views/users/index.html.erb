<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle names</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Line 1</th>
      <th>Line 2</th>
      <th>Line 3</th>
      <th>Town</th>
      <th>County</th>
      <th>Postcode</th>
      <th>Contact number</th>
      <th>Username</th>
      <th>Keyholder</th>
      <th>Guest</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.middle_names %></td>
        <td><%= user.last_name %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.gender %></td>
        <td><%= user.line_1 %></td>
        <td><%= user.line_2 %></td>
        <td><%= user.line_3 %></td>
        <td><%= user.town %></td>
        <td><%= user.county %></td>
        <td><%= user.postcode %></td>
        <td><%= user.contact_number %></td>
        <td><%= user.username %></td>
        <td><%= user.keyholder_id %></td>
        <td><%= user.guest_id %></td>
        <td><% if current_user || current_keyholder || current_guest %>
        		<% if can? :read, user %>
		        	<%= link_to 'Show', user %>
		        	<% else %>
		        	<p>n/a</p>
		        	<% end %></td>
		        <td><% if can? :update, user %>
		        	<%= link_to 'Edit', edit_user_path(user) %>
		        	<% else %>
		        	<p>n/a</p>
		        	<% end %></td>
		        <td><% if can? :destroy, user %>
		        	<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
		        	<% else %>
		        	<p>n/a</p>
		        	<% end %></td>
		   <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

